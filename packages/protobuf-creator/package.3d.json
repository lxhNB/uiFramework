{
    "name": "protobuf-creator",
    "version": "1.2.0",
    "description": "A simple protobuf tool for cocos creator",
    "author": "Devman",
    "main": "main.js",
    "editor": "^1.2.0",
    "contributions": {
        "messages": {
            "open-panel": {
                "methods": ["openPanel"]
            }
        },     
        "menu": [
            {
                "path": "i18n:menu.extension",
                "label": "i18n:protobuf-creator.title",
                "message": "open-panel"
            }
        ]
    },
    "panels": {
        "default": {
            "title": "i18n:protobuf-creator.title",
            "main": "./panel/panel.3d.js",
            "icon": "./icon.png",
            "flags": {
                "save": true
            },
            "size": {
                "min-width": 600,
                "min-height": 350,
                "width": 600,
                "height": 400
            }
        }
    },
    "dependencies": {
        "chokidar": "^3.4.1",
        "fix-path": "^3.0.0",
        "protobufjs": "^6.10.1"
    }
}
